<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.simulation.controller.SimulationController"
            prefHeight="750.0" prefWidth="1280.0"
            stylesheets="@styles.css">

    <!-- Top: Title and Control Panel -->
    <top>
        <VBox spacing="8" style="-fx-background-color: #2c3e50; -fx-padding: 8;">
            <!-- Title -->
            <HBox alignment="CENTER">
                <Label text="â˜ï¸ Cloud Computing Service Queue Simulation" textFill="white">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
            </HBox>

            <!-- Control Buttons -->
            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 5;">
                <Button fx:id="startButton" text="â–¶ï¸ Start" onAction="#handleStart"
                        styleClass="control-button" prefWidth="100"/>
                <Button fx:id="pauseButton" text="â¸ Pause" onAction="#handlePause"
                        styleClass="control-button" prefWidth="100" disable="true"/>
                <Button fx:id="resumeButton" text="â–¶ï¸ Resume" onAction="#handleResume"
                        styleClass="control-button" prefWidth="100" disable="true"/>
                <Button fx:id="stopButton" text="â¹ Stop" onAction="#handleStop"
                        styleClass="control-button" prefWidth="100" disable="true"/>
                <Button fx:id="resetButton" text="ðŸ”„ Reset" onAction="#handleReset"
                        styleClass="control-button" prefWidth="100"/>
                <Region prefWidth="30"/>
                <VBox alignment="CENTER" spacing="3" style="-fx-background-color: #3498db; -fx-padding: 10; -fx-background-radius: 6; -fx-border-color: #ffffff; -fx-border-width: 2; -fx-border-radius: 6;">
                    <Label text="â± SIMULATION TIME"  style="-fx-font-size: 12px; -fx-font-weight: bold; letter-spacing: 1px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0, 0, 1); -fx-text-fill: white;"/>
                    <Label fx:id="timeLabel" text="0.00s" style="-fx-font-weight: bold; -fx-font-size: 26px; -fx-background-color: #2471a3; -fx-padding: 6 18 6 18; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 5, 0, 0, 2); -fx-text-fill: white;"/>                </VBox>
                <Region prefWidth="30"/>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #27ae60; -fx-padding: 10; -fx-background-radius: 6; -fx-border-color: #ffffff; -fx-border-width: 2; -fx-border-radius: 6;">
                    <Label text="ðŸš€ SPEED CONTROL"  style="-fx-font-size: 12px; -fx-font-weight: bold; letter-spacing: 1px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0, 0, 1); -fx-text-fill: white;"/>
                    <HBox spacing="10" alignment="CENTER">
                        <Slider fx:id="speedSlider" min="0.1" max="100.0" value="1.0"
                                showTickLabels="true" showTickMarks="true"
                                majorTickUnit="20" minorTickCount="3" snapToTicks="false"
                                prefWidth="220" styleClass="speed-slider"/>
                        <Label fx:id="speedLabel" text="1.0x" style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-min-width: 70px; -fx-background-color: #1e8449; -fx-padding: 6 14 6 14; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 5, 0, 0, 2); -fx-alignment: center; -fx-text-fill: white;"/>                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Visualization Canvas -->
    <center>
        <VBox spacing="5" style="-fx-padding: 5;">
            <Label text="System Visualization" styleClass="section-title">
                <font><Font name="System Bold" size="14.0"/></font>
            </Label>
            <StackPane style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2;">
                <Canvas fx:id="visualizationCanvas" width="800" height="400"/>
            </StackPane>
        </VBox>
    </center>

    <!-- Right: Statistics Panel -->
    <right>
        <VBox spacing="5" style="-fx-padding: 5;" prefWidth="300">
            <Label text="ðŸ“Š Real-time Statistics" styleClass="section-title">
                <font><Font name="System Bold" size="14.0"/></font>
            </Label>

            <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <!-- Overall Statistics -->
                    <TitledPane text="Overall Statistics" expanded="true" collapsible="false">
                        <GridPane hgap="8" vgap="5" style="-fx-padding: 5;">
                            <Label text="Tasks Arrived:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <Label fx:id="arrivedTasksLabel" text="0" styleClass="stat-value"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Tasks Completed:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <Label fx:id="completedTasksLabel" text="0" styleClass="stat-value"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Avg System Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <Label fx:id="avgSystemTimeLabel" text="0.00s" styleClass="stat-value"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Throughput:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <Label fx:id="throughputLabel" text="0.00/s" styleClass="stat-value"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        </GridPane>
                    </TitledPane>

                    <!-- Queue Statistics -->
                    <TitledPane text="Queue Statistics" expanded="true" collapsible="false">
                        <VBox spacing="3" style="-fx-padding: 5;">
                            <Label fx:id="queueStatsLabel" text="" wrapText="true"/>
                        </VBox>
                    </TitledPane>

                    <!-- User Type Statistics -->
                    <TitledPane text="User Type Statistics" expanded="true" collapsible="false">
                        <VBox spacing="3" style="-fx-padding: 5;">
                            <Label fx:id="userTypeStatsLabel" text="" wrapText="true"/>
                        </VBox>
                    </TitledPane>

                    <!-- Task Type Statistics -->
                    <TitledPane text="Task Type Statistics" expanded="true" collapsible="false">
                        <VBox spacing="3" style="-fx-padding: 5;">
                            <Label fx:id="taskTypeStatsLabel" text="" wrapText="true"/>
                        </VBox>
                    </TitledPane>
                </VBox>
            </ScrollPane>
        </VBox>
    </right>

    <!-- Bottom: Configuration Panel -->
    <bottom>
        <VBox spacing="5" style="-fx-padding: 5; -fx-background-color: #ecf0f1;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="âš™ï¸ Configuration Parameters" styleClass="section-title">
                    <font><Font name="System Bold" size="14.0"/></font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ’¾ Save Config" onAction="#handleSaveConfig" styleClass="config-button"/>
                <Button text="ðŸ“ Load Config" onAction="#handleLoadConfig" styleClass="config-button"/>
                <Button text="ðŸ“Š View History" onAction="#handleViewHistory" styleClass="config-button"/>
            </HBox>

            <GridPane hgap="10" vgap="5" style="-fx-padding: 5;">
                <!-- Row 0 -->
                <Label text="Mean Arrival Interval (s):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="arrivalIntervalField" text="1.0" prefWidth="100"
                          GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Simulation Time (s):" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="simulationTimeField" text="1000.0" prefWidth="100"
                          GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <!-- Row 1 -->
                <Label text="CPU Nodes:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="cpuNodesField" text="4" prefWidth="100"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="GPU Nodes:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="gpuNodesField" text="3" prefWidth="100"
                          GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <!-- Row 2 -->
                <Label text="CPU Task Probability:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="cpuProbabilityField" text="0.7" prefWidth="100"
                          GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Result Storage Time (s):" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="resultStorageServiceTimeField" text="1.5" prefWidth="100"
                          GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <!-- Row 3 -->
                <Label text="Database:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <HBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <Label fx:id="dbStatusLabel" text="âŒ Not Connected" styleClass="db-status"/>
                    <Button text="Test" onAction="#handleTestDatabase" prefWidth="60"/>
                </HBox>
            </GridPane>

            <!-- Add Simulation History table -->
            <TitledPane text="Simulation History" expanded="true" collapsible="true">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <TableView fx:id="historyTable" prefHeight="180" prefWidth="600">
                        <columns>
                            <TableColumn fx:id="runIdColumn" text="Run ID" prefWidth="80"/>
                            <TableColumn fx:id="runNameColumn" text="Run Name" prefWidth="200"/>
                            <TableColumn fx:id="startTimeColumn" text="Start Time" prefWidth="150"/>
                            <TableColumn fx:id="endTimeColumn" text="End Time" prefWidth="150"/>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                            <TableColumn fx:id="completedTasksColumn" text="Completed Tasks" prefWidth="120"/>
                            <TableColumn fx:id="avgSystemTimeColumn" text="Avg System Time" prefWidth="120"/>
                            <TableColumn fx:id="throughputColumn" text="Throughput" prefWidth="120"/>

                        </columns>
                    </TableView>



                </VBox>
            </TitledPane>

        </VBox>
    </bottom>

</BorderPane>

